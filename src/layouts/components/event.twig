<article class="event">
	<header class="event__header">
		<picture class="event__picture">
			<source media="(min-width: 640px)" srcset="{{ image }}">
			<img class="event__image" src="{{ mobileImage }}" alt="{{ imageText }}">
		</picture>

		{% if novelty or fullYear %}
			<div class="event__labels">
				{% if novelty %}
					<p class="event__label">Новинка</p>
				{% endif %}

				{% if fullYear %}
					<p class="event__label event__label_secondary">Круглый год</p>
				{% endif %}
			</div>
		{% endif %}
	</header>

	<div class="event__content">
		<h2 class="event__title">{{ title }}</h2>

		<p class="event__duration">{{ duration }}</p>

		<ul class="event__features">
			{% for feature in features %}
				<li class="event__feature {{ feature.links ? 'event__feature_withLinks' }}">
					{{ feature.text }}

					{% if feature.links %}
						<ul class="event__links">
							{% for link in feature.links %}
								{% if loop.index == 4 and loop.length > 4 %}
									<li class="event__linkItem event__linkItem_expander">
										<button class="event__link" type="button">eщё...</button>
									</li>
								{% else %}
									<li class="event__linkItem">
										<a class="event__link" href="{{ link.url }}">{{ link.text }}</a>
									</li>
								{% endif %}
							{% endfor %}
						</ul>
					{% endif %}
				</li>
			{% endfor %}
		</ul>

		<div class="event__details">
			<div class="event__detailsContent">
				<b class="event__lead">{{ price }}
					₽</b>
				<p class="event__text">{{ onboardPrice }}
					₽ на причале</p>
			</div>

			<a class="event__button" href="{{ url }}">Подробнее</a>
		</div>
	</div>
</article>
